{
  "name": "product-analyzer-cli",
  "version": "0.0.4",
  "description": "CLI tool for AI product analysis",
  "bin": {
    "product-analyzer-cli": "./dist/main.js"
  },
  "scripts": {
    "build": "nest build",
    "webpack": "webpack --mode production",
    "sea:prepare": "node --experimental-sea-config sea-config.json",
    "sea:package": "node scripts/create-sea-package.js",
    "package": "pnpm run build && pnpm run webpack && pnpm run sea:prepare && pnpm run sea:package",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/@repo/ai/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "packaged"
  },
  "keywords": [
    "ai",
    "product analysis",
    "cli"
  ],
  "author": "Xavier Buillit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bxav/product-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/bxav/product-analyzer/issues"
  },
  "homepage": "https://github.com/bxav/product-analyzer#readme",
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "@langchain/community": "^0.2.19",
    "@langchain/core": "^0.2.16",
    "@langchain/langgraph": "^0.0.28",
    "@langchain/openai": "^0.2.2",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.0.0",
    "@repo/ai": "workspace:*",
    "chalk": "4",
    "cli-spinner": "^0.2.10",
    "nest-commander": "^3.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/config": "workspace:*",
    "@types/cli-spinner": "^0.2.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pkg": "^5.8.1",
    "postject": "1.0.0-alpha.6",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}